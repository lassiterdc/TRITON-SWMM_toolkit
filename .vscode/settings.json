{
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,

  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.analysis.indexing": false,
  "python.analysis.exclude": [
    "**/test_data/**",
    "**/external/**",
    "**/.snakemake/**",
    "**/_status/**",
    "**/logs/**",
    "**/build/**",
    "**/dist/**"
  ],

  "files.watcherExclude": {
    "**/test_data/**": true,
    "**/external/**": true,
    "**/.snakemake/**": true,
    "**/_status/**": true,
    "**/logs/**": true,
    "**/build/**": true,
    "**/dist/**": true
  },

  "search.exclude": {
    "**/test_data/**triton/**": true,
    "**/external/**": true,
    "**/.snakemake/**": true,
    "**/_status/**": true,
    "**/logs/**": true,
    "**/build/**": true,
    "**/dist/**": true
  },
}
